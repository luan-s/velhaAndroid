<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="fill_parent"
    android:layout_height="fill_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:background="@drawable/fundo"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/activity_vertical_margin"

    tools:context="com.luan.jogodavelha.GanhadorActivity"
    android:gravity="center_horizontal"
    android:weightSum="1">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_gravity="center_horizontal|center_vertical"
        android:layout_height="match_parent"
        android:layout_weight="0.84"
        android:weightSum="1">


        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Vencedor"
            android:layout_marginBottom="140dp"
            android:id="@+id/tvVencedor"
            android:gravity="center|center_vertical|center_horizontal"
            android:textColor="#ffffff"
            android:typeface="serif"
            android:textSize="50dp" />

        <ImageView
            android:layout_width="180dp"
            android:background="@drawable/o"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_height="160dp"
            android:layout_marginBottom="120dp"
            android:id="@+id/imageGanhaor"
            android:layout_weight="0.26" />
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Reiniciar"
                android:id="@+id/tvbt"
                android:layout_marginRight="100dp"
                android:gravity="bottom|center_horizontal"
                android:textColor="#ffffff"
                android:textSize="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Ver tabuleiro"
                android:id="@+id/tvVerTabuleiro"
                android:gravity="bottom|center_horizontal"
                android:textColor="#ffffff"
                android:textSize="20dp" />

        </LinearLayout>


        </LinearLayout>
</LinearLayout>

